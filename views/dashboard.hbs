<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}

{{else}}
<p>You have not created andy stories yet... </p>
{{/if}}

<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{createdAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
        </tr>
        {{/each}}
    </tbody>
</table>